<%= form_for([:admin, book], html: { class: 'form-horizontal' }) do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group">
    <label for="book_title" class="col-lg-2 control-label">Title</label>
    <div class="col-lg-5">
      <%= f.text_field :title, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="book_author" class="col-lg-2 control-label">Author</label>
    <div class="col-lg-5">
      <%= f.text_field :author, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="book_logo" class="col-lg-2 control-label">Logo</label>
    <div class="col-lg-5">
      <%= f.text_field :logo, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="book_description" class="col-lg-2 control-label">Description</label>
    <div class="col-lg-5">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="book_description" class="col-lg-2 control-label">Genre</label>
    <div class="col-lg-5">
      <%= f.collection_select(:genre_ids,
                            @genres, :id, :title,
                            { selected: @book.genre_ids },
                            { multiple: true, class: "form-control"}) %>
    </div>
  </div>

  <div class="form-group">
    <label for="book_user_id" class="col-lg-2 control-label">User ID</label>
    <div class="col-lg-5">
      <%= f.text_field :user_id, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <span class="col-lg-2 control-label"></span>
    <div class="col-lg-2">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to 'Back', admin_books_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>

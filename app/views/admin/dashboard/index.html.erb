<div class='col col-lg-6'>
  <table class='table'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Logo</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= image_tag(book.logo, size: "60x120") %></td>
          <td><%= link_to 'Show', admin_book_path(book), class: 'btn btn-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class='col col-lg-6'>
  <table class='table'>
    <thead>
      <tr>
        <th>Email</th>
        <th>Last sign in</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.last_sign_in_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

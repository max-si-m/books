<h1>Genres dashboard
  <%= link_to 'New Genre', new_admin_genre_path, class: 'btn btn-primary' %>
</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.title %></td>
        <td><%= genre.slug %></td>
        <td><%= link_to 'Show', admin_genre_path(genre), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_admin_genre_path(genre), class: 'btn btn-info' %></td>
        <td><%= link_to 'Delete', admin_genre_path(genre),
                  method: :delete,
                  data: { confirm: 'Are you sure?' },
                  class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @genres %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Logo</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <% next if book.draft? && !is_owner?(book.user) %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= image_tag(book.logo) %></td>
        <td><%= book.description %></td>
        <td><%= link_to 'Show', book %></td>
        <% if is_owner?(book.user) %>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= state_link(book) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>

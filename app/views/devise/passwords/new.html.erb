<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <label for="user_email" class="col-lg-2 control-label">Email</label>
    <div class="col-lg-5">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <span class="col-lg-2 control-label"></span>
    <div class="col-lg-2">
      <%= f.submit "Send me reset password instructions", class: 'btn btn-primary' %>
    </div>
  </div>
  <hr/>
  <%= render "devise/shared/links" %>
<% end %>
